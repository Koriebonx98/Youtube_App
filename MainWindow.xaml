<Window x:Class="youtube_pc_app.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:youtube_pc_app"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        mc:Ignorable="d"
        Title="YouTube" WindowState="Maximized" WindowStyle="None" ResizeMode="NoResize">

    <Grid x:Name="MainGrid">

        <!-- LAYER 1: WebView2 -->
        <Grid>
            <wv2:WebView2 x:Name="webView"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch" />
        </Grid>

        <!-- LAYER 2: Toast Overlay -->
        <Grid x:Name="ToastLayer"
              IsHitTestVisible="False"
              VerticalAlignment="Stretch"
              HorizontalAlignment="Stretch"
              Background="Transparent" />

        <!-- LAYER 3: Progress Bar -->
        <ProgressBar x:Name="DownloadProgress"
                     Height="6"
                     VerticalAlignment="Bottom"
                     Minimum="0"
                     Maximum="100"
                     Value="0"
                     Visibility="Collapsed"
                     Background="#222"
                     Foreground="#FF0000"
                     Margin="0,0,0,0" />

    </Grid>
</Window>
